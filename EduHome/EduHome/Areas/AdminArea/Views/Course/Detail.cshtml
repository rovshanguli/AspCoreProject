@model CourseDetail

@{ ViewData["Title"] = "Slider Detail";
                Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml"; }

<div class="container">
    <div class="row">
        <h4>Category</h4>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Slider</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-action="Edit">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>

                            </thead>
                            <tbody style="width:300px">

                                <img style="width: 300px; height: 150px; border-radius: unset" src="~/assets/img/course/@Model.Image" alt="Slider" /> </td>
                                <h5 class="mt-5"> @Model.Name</h5>
                                <h6 class="mt-3">@Model.Desc</h6>
                                <h6 class="mt-3">@Model.About</h6>
                                <h6 class="mt-3">@Model.Apply</h6>
                                <h6 class="mt-3">@Model.Certification</h6>
                                <h6 class="mt-3">@Model.Feature.Start</h6>
                                <h6 class="mt-3">@Model.Feature.Level</h6>
                                <h6 class="mt-3">@Model.Feature.Duration</h6>
                                <h6 class="mt-3">@Model.Feature.ClassDuration</h6>
                                <h6 class="mt-3">@Model.Feature.Level</h6>
                                <h6 class="mt-3">@Model.Feature.Lanuguage</h6>
                                <h6 class="mt-3">@Model.Feature.Student</h6>
                                <h6 class="mt-3">@Model.Feature.Assesments</h6>
                                <a class="btn btn-primary btn-sm" asp-action="Index">Go Back</a>

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

