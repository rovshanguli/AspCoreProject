@model Service
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Header">Header: </label>
            <input class="form-control" style="width:300px" asp-for="Header" type="text">
            <span class="text-danger" asp-validation-for="Header"></span>
        </div>
        <div class="form-group">
            <label asp-for="Desc">Desc : </label>
            <input class="form-control" style="width:300px" asp-for="Desc" type="text">
            <span class="text-danger" asp-validation-for="Desc"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}