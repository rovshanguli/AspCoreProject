@model TeacherDetailVM
@{
    ViewData["Title"] = "Detail";
    int count = 0;
}

<div class="container">
    <div class="row">
        <h4>Poster</h4>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Posters</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-controller="Poster" asp-action="Create">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <h6> <img style="width: 250px; height: 150px; border-radius: unset" src="~/assets/img/teacher/@Model.teacher.Image" alt="Slider" /> </h6>
                                    <h6>@Model.teacher.Name</h6>
                                    <h6>@Model.teacher.Number</h6>
                                    <h6>@Model.teacher.Mail</h6>
                                    <h6>@Model.teacher.Position</h6>
                                    <h6>@Model.teacher.Skype</h6>
                                    <h6>@Model.teacher.Faculty</h6>
                                    <h6>@Model.teacher.About</h6>
                                    <h6>@Model.teacher.Degree</h6>
                                    <h6>@Model.teacher.Experience</h6>
                                    
                                    @foreach (var skill in Model.skills)
                                    {
                                        <h6>@skill.Name</h6>
                                        <h6>@Model.percents[count]</h6>
                                        count++;
                                    }
                                </tr>
                                <tr>
                                    <a class="btn btn-primary btn-sm" asp-action="Index">Go Back</a>
                                </tr>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

