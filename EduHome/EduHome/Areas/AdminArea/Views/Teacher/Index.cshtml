@model List<Teacher>
@{ ViewData["Title"] = "Index";
                Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
                int count = 1; }





<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Events</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-controller="Teacher" asp-action="Create">Create</a></div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th> No </th>
                                    <th> Image </th>
                                    <th> Name </th>
                                    <th> Position </th>
                                    <th> Setting </th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var teacher in Model)
                                {
                                <tr>
                                    <td> @count </td>
                                    <td>   <img style="width:100px; height:50px; border-radius:unset" src="~/assets/img/teacher/@teacher.Image" alt="Poster" /></td>
                                    <td> @teacher.Name </td>
                                    <td>@teacher.Position  </td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-id="@teacher.Id">
                                            <i class="icon-options"></i>
                                        </a>
                                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@teacher.Id">
                                            <i class="icon-pencil"></i>
                                        </a>
                                        <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@teacher.Id">
                                            <button class="btn btn-danger btn-sm" type="submit">
                                                <i class=" icon-close"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>